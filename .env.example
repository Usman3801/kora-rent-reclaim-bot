# Kora Rent Reclaim Bot Configuration
# =====================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# REQUIRED: Solana Configuration
# =============================================================================

# Solana RPC endpoint (devnet/mainnet)
# For production, use a private RPC endpoint from providers like:
# - Helius (https://helius.xyz)
# - QuickNode (https://quicknode.com)
# - Triton (https://triton.one)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network cluster: 'devnet' | 'mainnet-beta' | 'testnet'
SOLANA_CLUSTER=devnet

# =============================================================================
# REQUIRED: Kora Operator Configuration
# =============================================================================

# The public key of your Kora node's fee payer wallet
# This is the wallet that pays transaction fees for sponsored transactions
KORA_FEE_PAYER_PUBKEY=

# Path to the operator's keypair file (JSON format)
# This keypair is used to sign rent reclaim transactions
# SECURITY: Ensure this file has restricted permissions (chmod 600)
OPERATOR_KEYPAIR_PATH=./keypair.json

# OR use base58 encoded private key (less secure, use keypair file in production)
# OPERATOR_PRIVATE_KEY=

# Treasury wallet address where reclaimed SOL will be sent
# If not set, defaults to the operator wallet
TREASURY_PUBKEY=

# =============================================================================
# OPTIONAL: Safety Configuration
# =============================================================================

# Minimum age (in days) before an account can be reclaimed
# Prevents reclaiming recently closed accounts that might be revived
MIN_ACCOUNT_AGE_DAYS=7

# Minimum lamports to reclaim (prevents dust transactions)
# Default: 890880 (minimum rent for a basic account)
MIN_RECLAIM_LAMPORTS=890880

# Maximum accounts to process per batch
# Lower values are safer but slower
MAX_BATCH_SIZE=50

# Enable dry-run mode by default (simulates but doesn't execute)
DRY_RUN=false

# Whitelist of program IDs whose accounts CAN be reclaimed
# Comma-separated list of program public keys
# If empty, all programs are allowed (less restrictive)
ALLOWED_PROGRAMS=

# Blacklist of program IDs whose accounts should NEVER be reclaimed
# Comma-separated list of program public keys
BLOCKED_PROGRAMS=

# =============================================================================
# OPTIONAL: Monitoring & Alerts
# =============================================================================

# Telegram bot token for alerts (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram chat ID for receiving alerts
TELEGRAM_CHAT_ID=

# Enable Telegram notifications
ENABLE_TELEGRAM=false

# Alert threshold: notify when reclaimable SOL exceeds this amount
ALERT_THRESHOLD_SOL=1.0

# =============================================================================
# OPTIONAL: Scheduling
# =============================================================================

# Cron expression for automated monitoring
# Default: Every 6 hours
MONITOR_CRON=0 */6 * * *

# Enable automated reclaim (requires explicit opt-in for safety)
AUTO_RECLAIM=false

# Cron expression for automated reclaim (only if AUTO_RECLAIM=true)
RECLAIM_CRON=0 0 * * 0

# =============================================================================
# OPTIONAL: Database
# =============================================================================

# SQLite database path for tracking accounts
DATABASE_PATH=./data/kora-reclaim.db

# =============================================================================
# OPTIONAL: Logging
# =============================================================================

# Log level: 'error' | 'warn' | 'info' | 'debug'
LOG_LEVEL=info

# Log file path (leave empty for console only)
LOG_FILE_PATH=./logs/kora-reclaim.log

# =============================================================================
# OPTIONAL: Rate Limiting
# =============================================================================

# Maximum RPC requests per second
RPC_RATE_LIMIT=10

# Delay between transactions in milliseconds
TX_DELAY_MS=1000
